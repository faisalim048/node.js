extends layout.pug

block title
	title= title

block content
	div(class='col-md-6')
		table(class='table table-bordered')
			tr
				th ID
				th Name
				th Action
			each data in datas
				tr
					td= data.id
					td= data.name
					td 
						a(class='btn btn-link' href='/view/'+data.id) View
						form(method='POST' action='/'+data.id style={'display': 'inline'})
							input(name='_method' type='hidden' value='DELETE')
							button(class='btn btn-link' type='submit') Delete
					
	a(class='btn btn-default' href='/') Back